<br>
{{#post}}
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="jumbotron">
          <h1>{{title}}</h1>
          <p class="small">{{author}} | {{timestamp datetime}}</p>
          <p>{{shortPost}}</p>
        </div>
      </div>
      <div class="col-sm-12">
        {{{post}}}
      </div>
    </div>
  </div>
{{/post}}